---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'
import PostItemArchive from '../../components/post/PostItemArchive.astro'

const allPosts = await getCollection('essays')
---

<BaseLayout>
  <div>
    <div class="mb-10">
      <h1 class="text-3xl font-bold">随笔</h1>
      <p class="">共有 {allPosts.length} 篇文章。</p>
    </div>

    <main>
      {
        allPosts.map((post) => (
          <PostItemArchive
            post={{ id: post.id, url: '/essays/' + post.id, title: post.data.title, date: post.data.publishTime }}
          />
        ))
      }
    </main>
  </div>
</BaseLayout>
