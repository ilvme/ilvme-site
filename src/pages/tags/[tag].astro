---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'
import PostItemArchive from '../../components/post/PostItemArchive.astro'
import { getAllPosts } from '../../libs/content-loader'
import PageHero from '../../components/post/PageHero.astro'

export async function getStaticPaths() {
  const allPosts = await getAllPosts()

  const uniqueTags = [...new Set(allPosts.flatMap((post: any) => post.data.tags))]

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post: any) => post.data.tags.includes(tag))
    return {
      params: { tag },
      props: { posts: filteredPosts },
    }
  })
}

const { tag } = Astro.params
const { posts } = Astro.props
---

<BaseLayout>
  <PageHero title={'#' + tag} />

  {
    posts.map((post) => (
      <PostItemArchive post={{ id: post.id, url: '/posts/' + post.id, title: post.data.title, date: post.data.date }} />
    ))
  }
</BaseLayout>
