---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'
import PageHero from '../../components/post/PageHero.astro'

const allPosts = await getCollection('essays')

const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())]

const tags = uniqueTags.map((tag) => ({
  label: tag,
  count: allPosts.filter((post) => post.data.tags.includes(tag)).length,
}))
---

<BaseLayout>
  <PageHero title="Tags" />

  <ul class="flex flex-wrap gap-x-4 gap-y-2">
    {
      tags.map(({ label, count }) => (
        <li class="inline-block rounded bg-gray-100 px-2 transition-all duration-200 ease-in-out hover:bg-gray-200">
          <a href={`/tags/${label}`} class="text-sm">
            #{label} ({count})
          </a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
