---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'

const allPosts = await getCollection('essays')

const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())]

const tags = uniqueTags.map((tag) => ({
  label: tag,
  count: allPosts.filter((post) => post.data.tags.includes(tag)).length,
}))
---

<BaseLayout>
  <h1 class="mb-6 text-2xl font-bold">Tags</h1>
  <ul class="flex flex-wrap gap-2">
    {
      tags.map(({ label, count }) => (
        <li class="inline-block rounded bg-gray-100 px-2 hover:bg-gray-300">
          <a href={`/tags/${label}`}>
            #{label} ({count})
          </a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
