---
import BaseLayout from '../../layouts/BaseLayout.astro'
import PostItemArchive from '../../components/post/PostItemArchive.astro'
import { getAllPosts } from '../../libs/content-loader'

const allPosts = await getAllPosts()
---

<BaseLayout>
  <div>
    <div class="mb-6">
      <h1 class="text-3xl font-bold">归档</h1>
      <p class="">共有 {allPosts.length} 篇文章。</p>
    </div>

    <main>
      {
        allPosts.map((post) => (
          <PostItemArchive
            key={post.id}
            post={{ url: `/${String(post.data.category).toLowerCase()}/${post.id}`, ...post.data }}
          />
        ))
      }
    </main>
  </div>
</BaseLayout>
