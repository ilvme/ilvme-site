---
import '../styles/global.css'
import Header from '../components/ui/Header.astro'
import BackToTop from '../components/ui/BackToTop.astro'
import Footer from '../components/ui/Footer.astro'
import SiteConfig from '../ilvme.config'

const { title = SiteConfig.title, description = SiteConfig.description, icon } = Astro.props
---

<!doctype html>
<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!--<link rel="icon" type="image/svg+xml" href="/favicon.svg" />-->
    <link rel="alternate" type="application/rss+xml" title={title} href={new URL('rss.xml', Astro.site)} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{icon}{title}</title>
  </head>
  <body>
    <main class="m-auto max-w-[768px] pt-8">
      <Header />

      <slot />

      <Footer />
      <BackToTop />
    </main>
  </body>
</html>
